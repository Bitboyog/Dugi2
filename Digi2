  <title>Digify</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    /* --- GENERAL THEME --- */
    body {
      margin: 0;
      font-family: 'Arial', sans-serif;
      background-color: #0f0f1a;
      color: #eee;
      overflow-x: hidden;
    }

    h1,h2,h3 { color: #8c6eff; margin: 10px 0; }

    nav {
      background: #1a1a2e;
      padding: 15px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    nav button {
      background-color: #8c6eff;
      border: none;
      border-radius: 10px;
      padding: 8px 15px;
      cursor: pointer;
      margin-left: 5px;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    nav button:hover {
      transform: scale(1.05);
      box-shadow: 0 0 10px #8c6eff;
    }

    .container {
      max-width: 1100px;
      margin: auto;
      padding: 20px;
    }

    .flex { display: flex; flex-wrap: wrap; gap: 15px; }
    .flex-col { display: flex; flex-direction: column; }

    input, textarea {
      border-radius: 8px;
      border: none;
      padding: 10px;
      margin: 5px 0;
      width: 100%;
      background: #1b1b2b;
      color: #eee;
    }

    button:hover { opacity: 0.9; }

    .card {
      background-color: #1b1b2b;
      border-radius: 15px;
      padding: 15px;
      box-shadow: 0 5px 15px #000;
      transition: transform 0.3s, box-shadow 0.3s;
      opacity: 0;
      transform: translateY(20px);
      width: 220px;
    }

    .card.show {
      opacity: 1;
      transform: translateY(0);
    }

    .card img { max-width: 100%; border-radius: 10px; }

    .hidden { display: none; }

    /* Chat panel */
    .chat-panel {
      position: fixed;
      right: -350px;
      top: 0;
      width: 300px;
      height: 100%;
      background: #1b1b2b;
      padding: 10px;
      transition: right 0.3s;
      display: flex;
      flex-direction: column;
    }

    .chat-panel.show { right: 0; }

    .chat-box {
      flex: 1;
      overflow-y: auto;
      background: #222;
      padding: 10px;
      border-radius: 10px;
      margin-bottom: 5px;
    }

    .chat-msg {
      margin: 5px 0;
      transition: opacity 0.3s;
    }

    /* Upload */
    .upload-area {
      border: 2px dashed #8c6eff;
      border-radius: 15px;
      padding: 30px;
      text-align: center;
      cursor: pointer;
      transition: background 0.3s;
      margin-bottom: 10px;
    }

    .upload-area:hover { background: #2a2a4d; }

    .fade-in { animation: fadeIn 0.5s forwards; }

    @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

    /* Featured carousel */
    .carousel { display: flex; overflow-x: auto; gap: 10px; padding-bottom: 10px; }
    .carousel::-webkit-scrollbar { display: none; }

    @media(max-width:700px){
      .flex { flex-direction: column; }
      .card { width: 100%; }
      .chat-panel { width: 100%; right: -100%; }
    }
